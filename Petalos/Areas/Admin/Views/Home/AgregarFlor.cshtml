@model Petalos.Models.Datosflores
@{
    Layout = "_Layout";
}
<h2 class="titulo">Agregar una nueva flor</h2>
<form method="post" action="~/Admin/Home/AgregarFlor">
    <label>Nombre:</label><input type="text" name="Nombre" value="@Model.Nombre" /><br />
    <label>Nombre Cientifico:</label><input name="Nombrecientifico" type="text" value="@Model.Nombrecientifico" /><br />
    <label>Nombre Común:</label><input type="text" name="Nombrecomun" value="@Model.Nombrecomun" /><br />
    <label>Origen:</label><input type="text" name="Origen" value="@Model.Origen" /><br />
    <label>Descripción:</label><textarea rows="5" name="Descripcion">@Model.Descripcion</textarea><br />

    <input type="submit" value="Agregar" />
    <a href="~/Admin/Home/Index">
        <input type="button" value="Cancelar" />
    </a>
</form>

<div id="popErrores" class="popup" runat="server">
    <div>
        <h1>Ha ocurrido un error:</h1>
        <p id="mensajeError">
            @Html.ValidationSummary()
        </p>
        <input type="button" value="Aceptar" onclick="cerrarPop(this)" />
    </div>
</div>

<script>
    let msgDivError = document.querySelector('#popErrores');
    let msgError = document.querySelector('.validation-summary-errors');
    if (msgError != null) {
        msgDivError.style.display = "block";
    }
    else {
        msgDivError.style.display = "none";
    }

    function cerrarPop(element) {
        let pop = element.parentNode.parentNode;
        pop.style.display = "none";
    }
</script>